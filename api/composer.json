{
  "name": "vendor_name/package_name",
  "description": "description_text",
  "minimum-stability": "stable",
  "license": "proprietary",
  "authors": [
    {
      "name": "author's name",
      "email": "email@example.com"
    }
  ],
  "require": {
    "php": ">=5.6.0",
    "slim/slim": "^3.7",
    "gabordemooij/redbean": "^v4.3",
    "monolog/monolog": "^1.22",
    "tuupola/slim-jwt-auth": "^2.3",
    "tuupola/slim-basic-auth": "^2.2",
    "firebase/php-jwt": "^4.0",
    "tuupola/base62": "^0.8.0",
    "ramsey/uuid": "^3.5",
    "paragonie/random_compat": "^2.0",
    "league/fractal": "^0.15.0",
    "akrabat/rka-scheme-and-host-detection-middleware": "^0.3.0",
    "aura/accept": "^2.2"
  },
  "require-dev": {
    "phpunit/phpunit": ">=5.7"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "process-timeout" : 0
  },
  "scripts": {
    "prep-work": [
      "rm -rf tests/work",
      "mkdir tests/work",
      "cp -r data tests/work",
      "cp -r public tests/work",
      "cp -r src tests/work",
      "cp -r vendor tests/work",
      "rm -rf tests/worklib",
      "mkdir tests/worklib",
      "cp -r tests/fixtures/lib2 tests/worklib"
    ],
    "copy-src": [
      "cp -r src tests/work"
    ],
    "start": [
      "@prep-work",
      "docker-compose start"
    ],
    "stop": "docker-compose stop",
    "prep-test": [
      "rm -rf tests/work",
      "mkdir tests/work",
      "cp -r data tests/work",
      "cp -r tests/fixtures/lib2 tests/worklib"
    ],
    "test": [
      "@prep-test",
      "phpunit"
      ]
  }
}
