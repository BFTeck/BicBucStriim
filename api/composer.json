{
  "name": "vendor_name/package_name",
  "description": "description_text",
  "minimum-stability": "stable",
  "license": "proprietary",
  "authors": [
    {
      "name": "author's name",
      "email": "email@example.com"
    }
  ],
  "require": {
    "php": ">=5.6.0",
    "slim/slim": "3.7.0",
    "gabordemooij/redbean": "v4.3.3",
    "monolog/monolog": "1.22.0"
  },
  "require-dev": {
    "phpunit/phpunit": ">=5.7"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "process-timeout" : 0
  },
  "scripts": {
    "prep-work": [
      "rm -rf tests/work",
      "mkdir tests/work",
      "cp -r data tests/work",
      "cp -r public tests/work",
      "cp -r src tests/work",
      "cp -r vendor tests/work"
    ],
    "start": [
      "@prep-work",
      "docker-compose start"
    ],
    "stop": "docker-compose stop",
    "test": "phpunit"
  }
}
